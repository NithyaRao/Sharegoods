<div class="container">
   <table class="table table-striped table-hover row-clickable">
      <thead>
        <tr >
          <th>Name </th>
          <th>Description </th>
          <th>Requestor</th>
          <th>Requesting Date</th>
          <th>Return Date</th>
          <th>Request</th>
          <th>Image </th>
          <th>Accept</th>
        </tr>
      </thead>  
      <tbody class="js-itemsshare">   
             <%= render partial: 'requests/sharerequestslist', collection: requests, as: :request  %> 
      <tbody> 
   </table>
   
</div> 
 
 <script type="text/javascript">

 $(".accept-request").on('click',function () {
  if (this.checked){
     var itemid = $(this).parent().find('.request-hidden').val();
    $.ajax({
      url: '/items/'+itemid+'/requests/'+this.value+'/acceptrequest',
      type: 'POST',
      data: {"checked": this.checked}
    });
  }
  else {
     alert("no");
  }
});

 </script>