<h4> Select your Share Group</h4>
<div class="row">
  <div class="col-md-6">
    <%= form_for @group, html: {id: 'new_group1'} do |f| %>
      <% if @group.errors.any? %>
        <div class="alert alert-danger">
        <h4>There are <%= pluralize(@group.errors.count, "error") %>.</h4>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= hidden_field_tag :selgroup, "1" %>
        <%= f.label :name %>
        <%= f.collection_select(:id, @membergroup, :id, :name,{},{ class: 'form-control', onchange: "$('#new_group1').submit()"} ) %>

      </div>
      <div class="form-group">
        <%= f.submit "Log In", class: 'btn btn-warning', name: 'submit' %>
      </div>
    <% end %>
  </div>
</div>
