<div class="container">

<div id="sharecontent">
    <div id="sharetab">
    <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
        <li><a href="#navreq" data-toggle="tab">Request</a></li>
        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="categorylist">Inventory<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <% @categories.each do |category| %>
            <li> <%= link_to category.name, fetch_items_path(category_id: category.id), remote: true  %></li> 
             <% end %>
        </ul>
        </li>
        <li><a href="#navwish" data-toggle="tab">Wishlist</a></li>
        <li><a href="#navadd" data-toggle="tab">Add</a></li>
        <li><a href="#navgroup" data-toggle="tab"><%=@group.name %> profile</a></li>
    </ul>
    </div>
    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane fade" id="navreq">
            <%= render partial: "items/share", locals: {group: @group} %>
