        <div class="tab-pane fade" id="navwish">
            <h1>Yellow</h1>
            <p>yellow yellow yellow yellow yellow</p>
        </div>
        <div class="tab-pane fade" id="navadd">
           <%= render template: "items/new", locals: {group: @group} %>
        </div>
        <div class="tab-pane fade" id="navgroup">
            <%= render partial: "groups/member" %>
        </div>
    </div>

</div>
 

</div> <!-- container -->

<script type="text/javascript">
 
 $('#tabs').click(function (e) {
  e.preventDefault()
  $("#tabs li").removeClass('active')
  $(this).parent().addClass('active')
  $(this).tab('show')
})
</script> 
