 <% if @wishitem.valid? %>
  $('.js-wishitem').prepend("<%= escape_javascript(render @wishitem) %>");
  $('.new-wishitem').html("<%= escape_javascript(render partial: 'wishitems/addwishitems', locals: {group: @group, wishitem: @new_wishitem}) %>");
 <% else %>
  $('.new-wishitem').html("<%= escape_javascript(render partial: 'wishitems/addwishitems', locals: {group: @group, wishitem: @wishitem}) %>");
 <% end %>