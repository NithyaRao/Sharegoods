<div class="row">
   <%= form_for [group,wishitem], html: {id: 'new_wishitem1'}, remote: true  do |f| %>
      <% if wishitem.errors.any? %>
      <div class="alert alert-danger">
      <h4>There are <%= pluralize(wishitem.errors.count, "error") %>.</h4>
      <ul>
        <% wishitem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="col-md-2 form-group">
         <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: 'form-control' }  %>
    </div>
    <div class="col-md-3 form-group">
          <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter Item name" %>
    </div>
    <div class="col-md-3 form-group">
          <%= f.text_field :description, autofocus: true, class: 'form-control', placeholder: "Enter Item description" %>
    </div>
    <div class="col-md-2 form-group">
        <div class="input-append date" data-date-format="yyyy-mm-dd" >
          <%= f.text_field :requesting_at, class: 'datepicker', placeholder: "Enter date needed" %> 
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
    </div>
    <div class="col-md-2 form-group">
        <%= f.submit "Add to Wishlist", class: 'btn btn-warning', name: 'submit', id:'addwishSubmit' %>
    </div>
  <% end %>

</div>

<script type="text/javascript">
            // When the document is ready
     $(document).ready(function () {
                
          $('.datepicker').datepicker({
            todayHighlight: true,
            todayBtn: true,
            title: 'Available Date',
            format: 'mm/dd/yyyy',
            autoclose: true
          });
            
      });

     $('.datepicker').on('change', function() {
         $('.datepicker').val();
      });

</script>
 