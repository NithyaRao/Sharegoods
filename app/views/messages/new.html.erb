<div class="col-md-6">
<%= form_for Message.new, as: :message, url: contact_path do |f| %>
  <div class="form-group">
    <%= f.label :name %> 
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter name" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>     
    <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %> 
  </div>
  <div class="form-group">
    <%= f.label :content %> 
    <%= f.text_area :content, autofocus: true, class: 'form-control', placeholder: "Enter Message" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send", class: 'btn btn-warning', style: "color:black" %>
  </div>
<% end %>
</div>
