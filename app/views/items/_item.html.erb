<tr class="clickable-row" data-href="url://" id=<%="item-#{item.id}"%> >
<td><%= link_to item.name, new_item_request_path(item_id: item.id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', 'data-item-name' => 'item.name'}  %> 
</td>
<td><a href="#"> <%= item.description %> </a> </td>
<td><a href="#"> <%= item.contact_name %> </a> </td>
<td><a href="#"><%= item.available_at.strftime('%D') if item.available_at %> </a> </td>
<td><a href="#"> <%= item.comment%> </a></td>
<td><a href="#"> <h4> Avatar </h4> </a></td>
</tr>
<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

 