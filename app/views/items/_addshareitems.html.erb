<h4> Add Items to Share Inventory for <%=group.name %></h4>
<div class="row">
  <%= form_for [group, item], html: {id: 'new_item1'}, remote: true  do |f| %>
    <% if item.errors.any? %>
      <div class="alert alert-danger">
      <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="col-md-6">
 
      <div class="form-group">
          <%= f.label :name, 'Category' %>
           <%= f.collection_select :category_id, Category.all, :id, :name, {}, { class: 'form-control' }  %>
      </div>
      <div class="form-group">
        <%= f.label :name, 'Item' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter group name" %>
      </div>
      <div class="form-group">
        <%= f.label :available_at, 'Available Date'%>
        <div class="input-append date" data-date-format="yyyy-mm-dd" >
        <%= f.text_field :available_at, class: 'datepicker',id: 'available' %><span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Add Items", class: 'btn btn-warning', name: 'submit' %>
      </div>
   </div>

   <div class="col-md-6">

      <div class="form-group">
        <%= f.label :description, 'Item Description'%>
        <%= f.text_area :description, class: 'form-control', placeholder: "Enter description" %>
      </div>
      <div class="form-group">
        <%= f.label :comment, 'Additional Info'%>
        <%= f.text_area :comment, class: 'form-control', placeholder: "Enter Additional Info" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
            // When the document is ready
     $(document).ready(function () {
                
          $('#available').datepicker({
            todayHighlight: true,
            todayBtn: true,
            title: 'Available Date',
            format: 'mm/dd/yyyy',
            autoclose: true
          });
            
      });

     $('#available').on('change', function() {
         $('#available').val();
      });
</script>
 