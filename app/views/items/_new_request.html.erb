<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="ModalLabel">Would like to Borrow <%=@item.name %>?</h4>
      </div>
     <%= form_tag send_message_item_path do %> 
      <div class="modal-body">
          <%= hidden_field_tag :item_id, @item.id %>
          <%= hidden_field_tag :owner_id, @item.owner_id %>
          <div class="form-group">
            <%= label_tag :requesting_at, "When?", class: "control-label" %>
            <div class="input-append date" data-date-format="mm-dd-yyyy" >
                 <%= text_field_tag :requesting_at, Time.now.strftime("%m/%d/%y"), class: "datepicker",maxlength:8 %>
                  <span class="add-on"><i class="icon-th"></i></span>
            </div>
          </div>
          
          <div class="form-group">
            <%= label_tag :description, "Request Message?", class: "control-label" %>
           <%= text_area_tag :description, nil, :placeholder => "Be sure to give detailed information", :class => "comment-input" %>
          </div>
          <div class="form-group">
            <%= label_tag :numofdays, "How many days?", class: "control-label"%>
            <%= number_field_tag :numofdays, nil, class: "form-control" , in: 1...365 %>
          </div>
      </div>
       <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= submit_tag "I need one!", :class => "btn btn-primary" %>
       </div>
       <%end %>    
    </div>
  </div>
  <script type="text/javascript">
     $(document).ready(function () {
                
          $('.datepicker').datepicker({
            todayHighlight: true,
            todayBtn: true,
            title: 'Request Date',
            format: 'mm/dd/yyyy',
            autoclose: true
          });
            


     $('.datepicker').on('change', function() {
         $('.datepicker').val();
      });
    
    });     
</script>




 
 