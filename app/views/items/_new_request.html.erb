<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Would like to Borrow </h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="request-date" class="control-label">When?</label>
            <input type="text" class="form-control" id="request-date">
          </div>
          <div class="form-group">
            <label for="numofdays" class="control-label">How many days?</label>
            <input type="text" class="form-control" id="numofdays">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Request Message</label>
