<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="ModalLabel">Would like to Borrow <%=@item.name %>?</h4>
      </div>
      <div class="modal-body">
        <form>   
          <div class="form-group">
            <label for="requested_at" class="control-label">When?</label>
             <div class="input-append date" data-date-format="yyyy-mm-dd" >
                <input type="text" id="requested_at" class="datepicker"><span class="add-on"><i class="icon-th"></i></span>
             </div>
          </div>
          <div class="form-group">
            <label for="numofdays" class="control-label">How many days?</label>
            <input type="text" class="form-control" id="numofdays">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Request Message</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">I need one!</button>
      </div>
    </div>
  </div>
  <script type="text/javascript">
     $(document).ready(function () {
                
          $('.datepicker').datepicker({
            todayHighlight: true,
            todayBtn: true,
            title: 'Request Date',
            format: 'mm/dd/yyyy',
            autoclose: true
          });
            


     $('.datepicker').on('change', function() {
         $('.datepicker').val();
      });
    
    });     
</script>




 
 